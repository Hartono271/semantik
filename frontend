<body>

  <h2>Search Tourist Destination</h2>

  <div class="search-box">
    <input type="text" id="keyword" placeholder="Example: Kuta, Beach, Cave..." />
    <button onclick="search()">Search</button>
  </div>

  <div id="results"></div>

  <script>
    async function search() {
      const keyword = document.getElementById("keyword").value.trim();
      const query = `
PREFIX to: <http://www.semanticweb.org/harto/ontologies/2025/3/protegetesis#>

SELECT DISTINCT
  ?name ?activity ?description ?facility ?openingHours 
  ?price ?rating ?timeEvent ?location ?images
WHERE {
  ?tourism to:TourismName ?name .
  FILTER(CONTAINS(LCASE(STR(?name)), LCASE("${keyword}")))

  OPTIONAL { ?tourism to:Activity     ?activity . }
  OPTIONAL { ?tourism to:Description  ?description . }
  OPTIONAL { ?tourism to:Facility     ?facility . }
  OPTIONAL { ?tourism to:OpeningHours ?openingHours . }
  OPTIONAL { ?tourism to:Price        ?price . }
  OPTIONAL { ?tourism to:Ratings      ?rating . }
  OPTIONAL { ?tourism to:TimeEvents   ?timeEvent . }
  OPTIONAL { ?tourism to:Images       ?images . }

  OPTIONAL {
    ?tourism to:Locatedin ?loc .
    BIND(STRAFTER(STR(?loc), "#") AS ?location)
  }
}

      `;

      const endpoint = "https://bret-postnuptial-phytogeographically.ngrok-free.dev/websemantik/sparql";
      const resultsDiv = document.getElementById("results");
      resultsDiv.innerHTML = "<p>Searching...</p>";

      try {
const url = endpoint + "?query=" + encodeURIComponent(query);

const response = await fetch(url, {
  method: "GET",
  headers: {
    "Accept": "application/sparql-results+json"
  }
});


        if (!response.ok) {
          resultsDiv.innerHTML = "<p>Failed to fetch data. Please check your Fuseki server.</p>";
          return;
        }

        const data = await response.json();
        resultsDiv.innerHTML = "";

        if (data.results.bindings.length === 0) {
          resultsDiv.innerHTML = "<p>No tourist destinations found.</p>";
        } else {
          const grouped = {};

          data.results.bindings.forEach(item => {
            const name = item.name?.value || "-";
            if (!grouped[name]) {
              grouped[name] = {
                activity: new Set(),
                description: new Set(),
                facility: new Set(),
                openingHours: new Set(),
                price: new Set(),
                rating: new Set(),
                timeEvent: new Set(),
                location: new Set(),
                images: new Set()
              };
            }
            if (item.activity)     grouped[name].activity.add(item.activity.value);
            if (item.description)  grouped[name].description.add(item.description.value);
            if (item.facility)     grouped[name].facility.add(item.facility.value);
            if (item.openingHours) grouped[name].openingHours.add(item.openingHours.value);
            if (item.price)        grouped[name].price.add(item.price.value);
            if (item.rating)       grouped[name].rating.add(item.rating.value);
            if (item.timeEvent)    grouped[name].timeEvent.add(item.timeEvent.value);
            if (item.location)     grouped[name].location.add(item.location.value);
            if (item.images)       grouped[name].images.add(item.images.value);
          });

          for (const name in grouped) {
            const div = document.createElement("div");
            div.className = "result";
            div.innerHTML = `
              <h3>${name}</h3>
              <p><strong>Location:</strong> ${[...grouped[name].location].join(", ") || "-"}</p>
              <p><strong>Activities:</strong> ${[...grouped[name].activity].join(", ") || "-"}</p>
              <p><strong>Description:</strong> ${[...grouped[name].description].join(", ") || "-"}</p>
              <p><strong>Facilities:</strong> ${[...grouped[name].facility].join(", ") || "-"}</p>
              <p><strong>Opening Hours:</strong> ${[...grouped[name].openingHours].join(", ") || "-"}</p>
              <p><strong>Price:</strong> ${[...grouped[name].price].join(", ") || "-"}</p>
              <p><strong>Rating:</strong> ${[...grouped[name].rating].join(", ") || "-"}</p>
              <p><strong>Event Time:</strong> ${[...grouped[name].timeEvent].join(", ") || "-"}</p>
            `;
            const imageURLs = [...grouped[name].images];
            if (imageURLs.length > 0) {
              div.innerHTML += `<img src="${imageURLs[0]}" alt="${name} image">`;
            }
            resultsDiv.appendChild(div);
          }
        }
      } catch (error) {
        console.error("Error:", error);
        resultsDiv.innerHTML = "<p>An error occurred while fetching data.</p>";
      }
    }
  </script>

</body>
</html>
